#!/bin/sh
PACKAGES="
gibsjose/crypto/bcrypt-hash
bup
colordiff
coreutils
cowsay
cscope
ctags
diff-pdf
direnv
docbook-xsl
docker-compose
doxygen
fd
ffind
ffmpeg
figlet
fish
fzf
gcc
git
gnupg
graphviz
guetzli
hub
imagemagick
jq
libevent
libssh2
libxmlsec1
lolcat
moreutils
mysql
mysql@5.7
nginx
ngrep
openssl@1.1
optipng
pdfgrep
pipenv
pngquant
postgresql
pv
pyenv
reattach-to-user-namespace
redis
ripgrep
sphinx-doc
ssh-copy-id
tesseract
tig
tldr
tree
unrar
vim
watch
watchman
wget
yarn
"

echo "$PACKAGES" | while read line; do
    if [ "$line" != "" ]; then
        brew install "$line"
    fi
done
